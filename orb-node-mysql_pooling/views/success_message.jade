doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Orbmi
    // Bootstrap
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='/stylesheets/styles.css')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    .container
      .row
        .col-xs-12
          .wrap
            .wrap-content
              if is_valid_url == 1
                h1
                  | Thanks for activating 
                  br
                  |  your OrbMi account!
                h4
                  | You can now log in to the app begin adding friends to 
                  br
                  | your orbit,setting locations,and sending message!
                .logo.text-center
                  img.img-responsive(src='/images/logo.png', alt='Logo')
                br
                .gotoapp
                br
              else
                h1
                  | Oops...
                h4
                  | It looks like you're trying to activate your account, but the URL you followed was invalid. Try copying and pasting the entire URL from your email.
                  br
                  | Activation links expire after 24 hours, and after 30 minutes if you clicked the link but didn't activate your account.
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/config.js')
    script(src='/js/bootstrap.min.js')
    if is_valid_url == 1
      script(src='/js/bowser.js')
      script(src='/js/app.js')
      script.
        $(function() {
          openApp("#{userInfo.email}", "#{userInfo.pass_token}");
        });
      